@page
@model RSKeyExchange.Pages.FriendsModel
@{
    Layout = null;
}
<kml xmlns="http://www.opengis.net/kml/2.2">
    <Document>
        @foreach(var peer in Model.Peers) {
            <Placemark>
                <name>@peer.name (@peer.location)</name>
                <description>
                    <![CDATA[
@peer.state
@peer.address
                    ]]>
                </description>
                <Point>
                    <coordinates>@peer.lon,@peer.lat,0</coordinates>
                </Point>
            </Placemark>
        }
    </Document>
</kml>